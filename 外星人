#include <stdio.h>
main()
{
    int x,n,i,j,t,current,max = 0;
    scanf("%d%d",&x,&n);
    int ai[n],bi[n];
    for(i=0;i<=n-1;i++)
        scanf("%d",&ai[i]);
    for(j = 0;j<=n-1;j++)
    {
        for(i = 0,max = 0;i<=n-1;i++)
        {
            current = x%ai[i];
            if(current>max)
            {
                bi[j] = i;
                max = current;
            }
        }
        for(t = 0;t<=n-1;t++)
        {
            if(bi[j] == t)
                ai[t] = 1;
        }
        x = max;
    }
    printf("%d\n",max);
    for(j = 0;j<n-1;j++)
        printf("%d ",bi[j]+1);
    printf("%d",bi[n-1]+1);
    return 0;
}
